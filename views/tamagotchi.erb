<h2> <%= @tamagotchi.name %> </h2>

<br>

<h4> Still breathing? <br>
   <%= @tamagotchi.alive %> </h4>

<br>

<h5> Food Level: <%= @tamagotchi.food_level %> </h5>
<h5> Activity Level: <%= @tamagotchi.activity_level %> </h5>
<h5> Sleep Level: <%= @tamagotchi.sleep_level %> </h5>

<br>
<br>

  <% if @tamagotchi.alive %>
    <form action= '/tamagotchi_play' method='post'>
      <input type='hidden' name='id' value='<%= @tamagotchi.id %>'>
      <button type='submit' class= 'btn btn-sm btn-primary'>Play!</button>
    </form>
    <br>

    <form action= '/tamagotchi_eat' method='post'>
      <input type='hidden' name='id' value='<%= @tamagotchi.id %>'>
      <button type='submit' class= 'btn btn-sm btn-primary'>Eat!</button>
    </form>
    <br>

    <form action= '/tamagotchi_sleep' method='post'>
      <input type='hidden' name='id' value='<%= @tamagotchi.id %>'>
      <button type='submit' class='btn btn-sm btn-primary'>Sleep!</button>
    </form>
    <br>

    <form action= '/tamagotchi_kill' method='post'>
      <input type='hidden' name='id' value='<%= @tamagotchi.id %>'>
      <button type='submit' class='btn btn-sm btn-primary'>Kill!</button>
    </form>
  <% else %>

  <h5> Tamagotchi is dunzo </h5>

  <% end %>
<br>

<p><a href="/">[Go back home]</a></p>
